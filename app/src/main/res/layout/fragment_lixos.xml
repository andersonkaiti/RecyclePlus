<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".lixosFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageLixos"
            app:layout_constraintBottom_toTopOf="@+id/linearLayoutLixos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/imagem2_1000"
            android:layout_width="match_parent"
            android:layout_height="578px" />

        <View
            android:id="@+id/viewLixos"
            android:layout_width="match_parent"
            android:layout_height="1px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.35" />

        <LinearLayout
            android:id="@+id/linearLayoutLixos"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewLixos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/shape_container"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardReciclaveis"
                    app:cardCornerRadius="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:backgroundTint="@color/dark_blue">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageReciclaveis"
                            android:layout_width="60dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/lixeira_amarela" />

                        <TextView
                            android:id="@+id/textReciclaveis"
                            app:cornerRadius="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:text="RECICLÁVEIS"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardComum"
                    app:cardCornerRadius="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:backgroundTint="@color/dark_blue">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageComum"
                            android:layout_width="60dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/lixeira_vermelha" />

                        <TextView
                            android:id="@+id/textComum"
                            app:cornerRadius="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:text="COMUM | REJEITOS"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardOrganico"
                    app:cardCornerRadius="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:backgroundTint="@color/dark_blue">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageOrganico"
                            android:layout_width="60dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/lixeira_marrom" />

                        <TextView
                            android:id="@+id/textOrganico"
                            app:cornerRadius="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:text="ORGÂNICO"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardToxico"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:backgroundTint="@color/dark_blue"
                    app:cardCornerRadius="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageToxico"
                            android:layout_width="60dp"
                            android:layout_height="75dp"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/lixo_toxico" />

                        <TextView
                            android:id="@+id/textToxico"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:text="TÓXICO"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            app:cornerRadius="50dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>